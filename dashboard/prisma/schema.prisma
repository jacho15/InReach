generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── User (synced from Supabase Auth via DB trigger) ──────────

model User {
  id            String    @id // UUID from Supabase Auth
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  apiKeys      ApiKey[]
  settings     UserSettings?
  campaigns    Campaign[]
  templates    Template[]
  contacts     Contact[]
  dailyStats   DailyStat[]
  activityLogs ActivityLog[]
}

// ─── Application Models ────────────────────────────────────────

model ApiKey {
  id        String    @id @default(cuid())
  userId    String
  name      String
  keyHash   String    @unique
  keyPrefix String
  lastUsed  DateTime?
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserSettings {
  id                String  @id @default(cuid())
  userId            String  @unique
  dailyLimit        Int     @default(25)
  weeklyLimit       Int     @default(100)
  cooldownMin       Int     @default(30000)
  cooldownMax       Int     @default(90000)
  businessHoursOnly Boolean @default(true)
  businessHoursStart Int    @default(9)
  businessHoursEnd   Int    @default(18)
  warmupEnabled     Boolean @default(true)
  dryRun            Boolean @default(false)
  timezone          String  @default("America/New_York")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Campaign {
  id          String   @id @default(cuid())
  userId      String
  name        String
  searchUrl   String
  templateId  String?
  status      String   @default("active")
  currentPage Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  template     Template?     @relation(fields: [templateId], references: [id], onDelete: SetNull)
  contacts     Contact[]
  dailyStats   DailyStat[]
  activityLogs ActivityLog[]
}

model Template {
  id            String   @id @default(cuid())
  userId        String
  name          String
  body          String
  sentCount     Int      @default(0)
  acceptedCount Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  campaigns Campaign[]
}

model Contact {
  id          String    @id @default(cuid())
  userId      String
  campaignId  String?
  profileUrl  String
  name        String?
  headline    String?
  company     String?
  status      String    @default("sent")
  messageSent String?   @db.Text
  sentAt      DateTime?
  createdAt   DateTime  @default(now())

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  campaign Campaign? @relation(fields: [campaignId], references: [id], onDelete: SetNull)

  @@unique([userId, profileUrl])
}

model DailyStat {
  id         String   @id @default(cuid())
  userId     String
  campaignId String?
  date       DateTime @db.Date
  sent       Int      @default(0)
  skipped    Int      @default(0)
  errors     Int      @default(0)

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  campaign Campaign? @relation(fields: [campaignId], references: [id], onDelete: SetNull)

  @@unique([userId, date, campaignId])
}

model ActivityLog {
  id         String   @id @default(cuid())
  userId     String
  campaignId String?
  type       String
  data       Json?
  createdAt  DateTime @default(now())

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  campaign Campaign? @relation(fields: [campaignId], references: [id], onDelete: SetNull)
}
